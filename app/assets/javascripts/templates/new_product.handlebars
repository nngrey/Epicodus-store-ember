<h1>New product</h1>

<form>
  <div class="form-group">
    <label for="name"></label>
    {{#each error in errors.name}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="name" value=name placeholder="Name"}}
  </div>
  <div class="form-group">
  <label for="description"></label>
  {{#each error in errors.description}}
    {{error.message}}
  {{/each}}
    {{input type="text" id="description" value=description placeholder="Description"}}
  </div>
  <div class="form-group">
  <label for="price"></label>
  {{#each error in errors.price}}
    {{error.message}}
  {{/each}}
    {{input type="text" id="price" value=price placeholder="Price"}}
  </div>

  <button {{action createProduct}} class="btn btn-success">Create product</button>
</form>
